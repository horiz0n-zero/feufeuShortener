<div style="width: 60%; margin: auto;">
  <div style="width: 100%; padding-top: 32px; padding-bottom: 32px;">
    <form action="/" method="POST">
     <input type="text" placeholder="url" name="url" style="width: 100%; height: 30px; padding-left: 8px; box-shadow: aliceblue 0px 54px 55px, aliceblue 0px -12px 30px, aliceblue 0px 4px 6px, aliceblue 0px 12px 13px, aliceblue 0px -3px 5px;border-radius: 8px; border: 0px;">
    </form>
  </div>
  <br>
  <% @elements.each do |e| %>
    <div style="width: 100%; border-radius: 8px; border-style: solid; border-width: 4px; border-color: aliceblue;">
      <h3 style="margin-left: 16px; margin-right: 8px; margin-top: 16px;"><%= e.url %></h3>
      <div style="height: 36px; margin: 8px; border-radius: 4px; background-color: aliceblue;">
        <h3 style="padding-top: 8px; padding-left: 8px;"><%= "http://#{@hostname}:#{@port}/#{e.slug}" %></h3>
      </div>
      <h5 style="height: 20px; margin-top: 8px; margin-bottom: 8px; margin-right: 8px; margin-bottom: 0px; text-align: right;">clics: <%= e.clics %> popularity: <%= e.popularity %></h5>
    </div>
    <br>
  <% end %>
</div>