<div style="width: 60%; margin: auto;">
  <br>
  <% @elements.each do |e| %>
  <div style="width: 100%; border-radius: 8px; border-style: solid; border-width: 4px; border-color: aliceblue;">
    <h3 style="margin-left: 16px; margin-right: 16px; margin-top: 8px;"><%= e.url %></h3>
    <%= link_to 'Destroy',  "/.admin/#{e.slug}", method: :delete %>
    <div style="height: 36px; margin: 8px; border-radius: 4px; background-color: aliceblue;">
      <h3 style="padding-top: 8px; padding-left: 8px;"><%= "http://#{@hostname}:#{@port}/#{e.slug}" %></h3>
    </div>
    <h5 style="height: 20px; margin-top: 8px; margin-bottom: 8px; margin-right: 8px; margin-bottom: 0px; text-align: right;">clics: <%= e.clics %> popularity: <%= e.popularity %></h5>
  </div>
  <br>
<% end %>
</div>